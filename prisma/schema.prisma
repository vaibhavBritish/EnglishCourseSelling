generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email String @unique
  password String
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  price Float
  category String
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

